@page "/changepassword/{userName}"
<PageTitle>Change @userName Password</PageTitle>
<div class="card">
    <div class="card-header">
        <h3>Change @userName Password</h3>
    </div>

    
    <div class="card-body">
        @if(ChangePasswordErrors == true)
        {
            <div class="alert alert-danger" role="alert">
                @foreach(var error in Errors)
                {
                    <h5>@error</h5>
                }
            </div>
        }
        <EditForm Model="_changePassword" OnValidSubmit="Save">
            <DataAnnotationsValidator />
            <div class="form-group row">
                <label for="UserName" class="col-md-2 col-form-label">Current Password : </label>
                <InputText type="password" id="UserName" class="form-control" @bind-Value="_changePassword.CurrentPassword"/>
                <ValidationMessage For="@(() => _changePassword.CurrentPassword)" />
            </div>
            <div class="form-group row">
                <label for="UserEmail" class="col-md-2 col-form-label">New Password : </label>
                <InputText type="password" id="UserEmail" class="form-control" @bind-Value="_changePassword.NewPassword"/>
                <ValidationMessage For="@(() => _changePassword.NewPassword)" />
            </div>
            <div class="form-group row">
                <label for="Password" class="col-md-2 col-form-label">Confirm Password : </label>
                <InputText type="password" id="Password" class="form-control" @bind-Value="_changePassword.ComfirmPassword"/>
                <ValidationMessage For="@(() => _changePassword.ComfirmPassword)" />
            </div>
            
            <button type="submit" class="btn btn-success mt-2 float-end">Change Password</button>
        </EditForm>
    </div>

</div>

@page "/roleslist"
@attribute [Authorize]
<PageTitle>Roles</PageTitle>

@if(_roles == null){
    <span class="loader"></span>
}else{
    <div class="card">
        <div class="card-header">
            <h3>Roles List <a href="Newrole" class="float-end"><h5 class="btn btn-primary">New Role</h5></a></h3>
        </div>


        <div class="card-body">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        Role Name
                    </th>
                    <th>
                        Update
                    </th>
                    <th>
                        Delete
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in _roles)
                {
                    <tr>
                    <td>@role.Name</td>
                    <td><a class="btn btn-info" href="/editrole/@role.Id">Update</a></td>
                    <td><button type="button" class="btn btn-danger" @onclick = "() => Delete(role.Id)">Delete</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>
}
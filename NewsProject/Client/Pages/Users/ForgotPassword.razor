@page "/forgot"
<PageTitle>Forgot Password</PageTitle>

<div class="card">
    <div class="card-header">Forgot Password</div>
    <div class="card-body">
        <EditForm Model="_forgot" OnValidSubmit = "send">
            <DataAnnotationsValidator />
            <div class = "form-group row">
                <label for="Email" class="col-md-2 col-form-label">Email :</label>
                <InputText id="Email" class="form-control" @bind-Value="_forgot.Email" />
            </div>
            <ValidationMessage For="@(()=> _forgot.Email)" />
                <button type="submit" class="btn btn-primary mt-2 float-end">send</button>
        </EditForm>
    </div>
</div>
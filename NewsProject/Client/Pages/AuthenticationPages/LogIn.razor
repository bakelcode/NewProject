@page "/Login"
<PageTitle>Login</PageTitle>
<div class="card">
    <div class="card-header">
        <h3>Login user</h3>
    </div>


    <div class="card-body">
        @if (LoginErrors == true)
        {
            <div class="alert alert-danger" role="alert">
                @foreach (var error in Errors)
                {
                    <h5>@error</h5>
                }
            </div>
        }
        <EditForm Model="_login" OnValidSubmit="LogInUser">
            <DataAnnotationsValidator />
            <div class="form-group row">
                <label for="UserName" class="col-md-2 col-form-label">User name : </label>
                <InputText id="UserName" class="form-control" @bind-Value="_login.UserName" />
                <ValidationMessage For="@(() => _login.UserName)" />
            </div>
            <div class="form-group row">
                <label for="Password" class="col-md-2 col-form-label">Password : </label>
                <InputText type="password" id="Password" class="form-control" @bind-Value="_login.Password" />
                <ValidationMessage For="@(() => _login.Password)" />
            </div>
            <label class="mt-2" for="RememberMe">Remember Me</label>
            <input class="mt-2" type="checkbox" checked="@RememberMe" @onchange="CheckBoxChanged" />
            <button type="submit" class="btn btn-success mt-2 float-end">Login</button>
            <a href="/forgot" class="btn btn-primary mt-2 float-end">Forgot Password</a>
        </EditForm>
    </div>

</div>
